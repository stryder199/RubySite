<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>  
<% else %>

  <div class="center hero-unit">
  	<div class="floatr">
    	<h1>Welcome to BlackBook!</h1>

    	<h2>
      	  A simple social networking site
   		</h2>

    	<%= link_to "Register Now!", signup_path, 
                                	:class => "btn btn-large btn-primary" %>
    </div>
    
    <div class="floatl">
    	<%= image_tag("blackbook_1298297031.jpg", :alt => "BB") %>
    </div>
  </div>
  
  <div class="railsimg">
  	<small>
  		Powered By:<br />
    </small>
    
    <%= link_to image_tag("rails.png", :alt => "Rails"), 'http://rubyonrails.org/' %>
  </div>
<% end %> 